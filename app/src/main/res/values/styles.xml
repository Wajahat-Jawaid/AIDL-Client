<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" />

    <!-- Profile -->
    <style name="AppTheme.Profile" />

    <style name="AppTheme.Profile.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:layout_marginBottom">@dimen/margin_xxsmall</item>
    </style>

    <style name="AppTheme.Profile.Text.Label">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <!-- Login -->
    <style name="AppTheme.LoginForm" />

    <style name="AppTheme.LoginForm.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.LoginForm.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>